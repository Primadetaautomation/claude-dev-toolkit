  "globalSettings": {
    "defaultEscalationTrigger": "75%",
    "maxConcurrentHighContextSessions": 3,
    "costAlert": {
      "dailyThreshold": 100.0,
      "monthlyThreshold": 2000.0
    },
    "monitoringInterval": 30000,
    "escalationCooldown": 300000,
    "contextUsageLogging": true,
    "costOptimization": {
      "enabled": true,
      "aggressiveDownscaling": false,
      "contextShrinkThreshold": "30%"
    }
  },

  "taskTypeMapping": {
    "implementation": {
      "baseContext": "32K",
      "complexityMultiplier": 1.2
    },
    "analysis": {
      "baseContext": "200K",
      "complexityMultiplier": 1.5
    },
    "architecture": {
      "baseContext": "200K",
      "complexityMultiplier": 2.0
    },
    "testing": {
      "baseContext": "32K",
      "complexityMultiplier": 1.3
    },
    "debugging": {
      "baseContext": "200K",
      "complexityMultiplier": 1.4
    },
    "security": {
      "baseContext": "200K",
      "complexityMultiplier": 1.8
    },
    "deployment": {
      "baseContext": "200K",
      "complexityMultiplier": 1.6
    },
    "migration": {
      "baseContext": "1M",
      "complexityMultiplier": 2.0
    }
  },

  "escalationRules": {
    "automatic": {
      "contextUtilizationThreshold": "75%",
      "consecutiveWarningsThreshold": 3,
      "timeBasedEscalation": {
        "enabled": true,
        "thresholdMinutes": 10
      }
    },
    "manual": {
      "allowUserOverride": true,
      "requireApprovalFor1M": true,
      "emergencyEscalation": {
        "enabled": true,
        "maxContextTier": "1M"
      }
    }
  },

  "costManagement": {
    "trackingEnabled": true,
    "budgetAlerts": {
      "50percent": true,
      "75percent": true,
      "90percent": true,
      "100percent": true
    },
    "optimizationStrategies": {
      "chunkBasedProcessing": {
        "enabled": true,
        "maxChunkSize": "50K"
      },
      "parallelProcessing": {
        "enabled": true,
        "maxParallelSessions": 3
      },
      "contextReuse": {
        "enabled": true,
        "sessionCacheMinutes": 30
      }
    }
  },

  "monitoring": {
    "metricsCollection": {
      "enabled": true,
      "interval": 30,
      "retentionDays": 30
    },
    "alerts": {
      "contextOverflow": true,
      "escalationEvents": true,
      "budgetExceeded": true,
      "performanceDegradation": true
    },
    "reporting": {
      "daily": true,
      "weekly": true,
      "monthly": true
    }
  },

  "fallbackStrategies": {
    "chunkBasedProcessing": {
      "description": "Split large tasks into smaller context windows",
      "applicableFor": ["full-project", "large-codebase"]
    },
    "testSuiteSegmentation": {
      "description": "Process test suites in segments",
      "applicableFor": ["large-test-suites", "cross-browser-testing"]
    },
    "incrementalAnalysis": {
      "description": "Analyze systems incrementally",
      "applicableFor": ["code-analysis", "architecture-review"]
    },
    "taskDecomposition": {
      "description": "Break complex tasks into simpler subtasks",
      "applicableFor": ["complex-implementations", "refactoring"]
    }
  },

  "integration": {
    "claudeCode": {
      "enabled": true,
      "contextFlags": {
        "200K": "--max-context=200000",
        "1M": "--max-context=1000000"
      }
    },
    "webhooks": {
      "escalationEvents": null,
      "budgetAlerts": null,
      "taskCompletion": null
    }
